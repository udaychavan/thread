PROGRAM <Total Order>
1. DECLARE double itemPrice, orderTotal ;
2. SET orderTotal = 0.00 ;
3. WHILE more items in order
4. READ itemPrice ;
5. SET orderTotal = orderTotal + itemPrice ;
6. ENDWHILE
7. DISPLAY orderTotal ;
END
2. Centigrade to Fahrenheit
1. PROGRAM <CentigradeToFahrenheit >
2. DECLARE double centigrade, fahrenheit ;
3. SET centigrade = 0.00 ;
4. WHILE centigrade <=20.00 ;
5. SET fahrenheit = (centigrade * 1.80) + 32.00 ;
6. DISPLAY fahrenheit ;
7. SET centigrade = centigrade + 1.00 ;
8. ENDWHILE
END
